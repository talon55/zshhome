# ------------------------
#   ZSH PATH CONFIGURATION
# ------------------------

typeset -U path
path=(
  /usr/local/git/bin
  $HOME/.zsh/git
  /usr/local
  /usr/local/sbin
  /usr/local/opt/ruby/bin
  $HOME/.rvm/bin # rvm support
  $HOME/.local/bin
  $HOME/.pyenv/bin # pyenv support
  $HOME/.yarn/bin # yarn global packages
  $path # Must be last
)
